<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.digifragmentv2.view.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <argument
            android:name="digimon"
            app:argType="com.example.digifragmentv2.model.Digimon" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.digifragmentv2.view.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="digimon"
            app:argType="com.example.digifragmentv2.model.Digi" />
        <action
            android:id="@+id/action_detailsFragment_to_fragmentLinearEvolutions"
            app:destination="@id/fragmentLinearEvolutions" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLinearEvolutions"
        android:name="com.example.digifragmentv2.view.FragmentLinearEvolutions"
        android:label="fragment_linear_evolutions"
        tools:layout="@layout/fragment_linear_evolutions" >
        <argument
            android:name="digimon"
            app:argType="com.example.digifragmentv2.model.Digi" />
        <argument
            android:name="pre"
            app:argType="boolean" />
        <action
            android:id="@+id/action_fragmentLinearEvolutions_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>
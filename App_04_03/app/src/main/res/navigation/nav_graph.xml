<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentListaPeliculas">

    <fragment
        android:id="@+id/mainFragment"
        android:name="es.intermodular.app_04_03.view.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/fragmentDetalle"
        android:name="es.intermodular.app_04_03.view.FragmentDetalle"
        android:label="fragment_detalle"
        tools:layout="@layout/fragment_detalle" >
        <action
            android:id="@+id/action_fragmentDetalle_to_fragmentListaPeliculas"
            app:destination="@id/fragmentListaPeliculas" />
        <argument
            android:name="pelicula"
            app:argType="es.intermodular.app_04_03.model.Pelicula" />
        <action
            android:id="@+id/action_fragmentDetalle_to_fragmentNuevaPelicula"
            app:destination="@id/fragmentNuevaPelicula" />
        <action
            android:id="@+id/action_fragmentDetalle_to_fragmentCriticas"
            app:destination="@id/fragmentCriticas" />
    </fragment>
    <fragment
        android:id="@+id/fragmentListaFavoritas"
        android:name="es.intermodular.app_04_03.view.FragmentListaFavoritas"
        android:label="fragment_lista_favoritas"
        tools:layout="@layout/fragment_lista_favoritas" >
        <action
            android:id="@+id/action_fragmentListaFavoritas_to_fragmentDetalle"
            app:destination="@id/fragmentDetalle" />
    </fragment>
    <fragment
        android:id="@+id/fragmentListaPeliculas"
        android:name="es.intermodular.app_04_03.view.FragmentListaPeliculas"
        android:label="fragment_lista_peliculas"
        tools:layout="@layout/fragment_lista_peliculas" >
        <action
            android:id="@+id/action_fragmentListaPeliculas_to_fragmentDetalle"
            app:destination="@id/fragmentDetalle" />
    </fragment>
    <fragment
        android:id="@+id/fragmentNuevaPelicula"
        android:name="es.intermodular.app_04_03.view.FragmentNuevaPelicula"
        android:label="fragment_nueva_pelicula"
        tools:layout="@layout/fragment_nueva_pelicula" >
        <action
            android:id="@+id/action_fragmentNuevaPelicula_to_fragmentListaPeliculas"
            app:destination="@id/fragmentListaPeliculas" />
    </fragment>
    <fragment
        android:id="@+id/fragmentCriticas"
        android:name="es.intermodular.app_04_03.view.FragmentCriticas"
        android:label="fragment_criticas"
        tools:layout="@layout/fragment_criticas" >
        <argument
            android:name="peliculaId"
            app:argType="long" />
    </fragment>
</navigation>
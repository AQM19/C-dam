<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentLocalizacion">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/latitudTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/latitud"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/longitudTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/longitud"
            android:layout_margin="15dp"
            />

        <TextView
            android:id="@+id/direccionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direccion"
            android:layout_margin="15dp"
            />

        <Button
            android:id="@+id/localizacionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="@string/obtener_localizacion" />

    </LinearLayout>
</FrameLayout>
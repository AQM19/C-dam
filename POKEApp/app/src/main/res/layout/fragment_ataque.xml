<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AtaqueFragment"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/nombreAtaque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginVertical="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textoDesc"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/nombreAtaque"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="20dp"
        android:padding="15dp"
        android:textSize="16sp"/>

    <TableLayout
        android:id="@+id/tablaStats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textoDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp">

        <TableRow>

            <TextView
                android:id="@+id/modoAtaque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/textoPrecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textoPotencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/textoUsos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textoTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>